<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light/Day theme -->
    <style name="Theme.Home_server_frontend" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>

        <!-- Text colors -->
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Default widget styles -->
        <item name="editTextStyle">@style/Widget.HomeServer.EditText</item>

        <!-- If using TextInputLayout -->
        <item name="textInputStyle">@style/Widget.HomeServer.TextInputLayout</item>

        <item name="buttonStyle">@style/Widget.HomeServer.Button</item>
    </style>

</resources>